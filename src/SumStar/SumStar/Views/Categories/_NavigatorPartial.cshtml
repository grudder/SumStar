@using SumStar.Models
@model IList<Category>

@for (int i = 0; i < Model.Count; ++i)
{
	Category category = Model[i];
	if (category.Id == 1)
	{
		@Html.ActionLink("首页", "Index", "Home")
	}
	else
	{
		@Html.ActionLink(category.Name, "List", "Contents", new {categoryId = category.Id}, null)
	}
	if (i != Model.Count - 1)
	{
		<span>&gt;</span>
	}
}
