@model SumStar.Models.ArticleContent

@{
	ViewBag.Title = "删除文章内容";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>你确认要删除吗？</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TitleVisibleInContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TitleVisibleInContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TopicImage)
        </dt>

        <dd>
			<img width="120" height="90" src="@Model.TopicImage" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd id="Content">
            @Html.Raw(Model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreateByUser)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateByUser.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
		
        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-primary" />
			@Html.ActionLink("返回", "Index", "Contents", new {ViewBag.CategoryId}, new {@class = "btn btn-default"})
        </div>
    }
</div>

@section Scripts {
	<script type="text/javascript" src="@Url.Content("~/Content/UEditor/ueditor.parse.min.js")"></script>
	<script type="text/javascript">
		$(function () {
			uParse("#Content");
		});
	</script>
}
